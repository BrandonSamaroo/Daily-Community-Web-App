<main>
    <div class="block-element">
        <div class="community-profile-container">
            <div class="community-profile-header">
                <div class="picture-container">
                    <% if(community.profilePicture){ %>
                        <img src="<%= community.profilePicture %>" alt="Profile Picture" class="profile-picture">
                    <% } else{ %>
                        <img src="../assets/defaultcommunity.jpg" alt="Profile Picture" class="profile-picture">
                    <% } %>
                </div>
                <div class="name"><%= community.name %></div>
            </div>
            <div class="bio"><%= community.bio %></div>
            <% if(community.users[0] == currentUser.id){ %>
                <div><a href="/settings/<%= community.name %>">Settings</a></div>
            <% } %>
        </div>
    </div>

    <br>
    <div class="block-element">
    <% if (displayFollow) { %>
        <div class="follow"><a href="/follow/community/<%= community.name %>">Follow</a></div>
    <% } else { %>
        <form method="post" action="/post" class="post-form">
            <label>Create a post to <%= community.name %></label>
            <textarea id="textarea" name="content" maxlength="200"></textarea>
            <input type="hidden" name="community" value="<%= community.name %>">
            <input type="hidden" name="redirect" value="/community/<%= community.name %>">
            <button type="submit" class="btn">Post</button>
        </form>
    <% } %>
    </div>

    <br>

    <%- include('../partials/post') %>


</main>